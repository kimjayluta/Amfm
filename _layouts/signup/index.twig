<!-- HTML/TWIG body content here -->
<div class="container mt-5 mb-5" style="width: 572px;">
    <div class="card cd">
        <div class="card-header signup" style="background-color: #83dca9; border: 0;">
            <h3>Join AMFM now!</h3>
            <small>Already have an account? <a href="/login">Click here</a></small>
        </div>
        <form action="/signup" method="post" style="padding: 14px;">
            <div class="form-row">
                <div class="col fn">
                    <label for="firstName">First Name</label>
                    <input type="text" class="form-control" placeholder="Enter First name" name="fn">
                </div>
                <div class="col ln">
                    <label for="lastName">Last Name</label>
                    <input type="text" class="form-control" placeholder="Enter Last name" name="ln">
                </div>
            </div>

            <div class="form-group">
                <label for="birthday">Birthday</label>
                <input type="date" class="form-control" placeholder="Enter Birthday" name="bd">
            </div>

            <div class="form-group">
                <label for="address">Address</label>
                <input type="text" class="form-control" placeholder="Enter Permanent Address" name="ad">
            </div>

            <div class="form-group">
                <label for="contact_number">Contact Number</label>
                <input type="text" class="form-control" placeholder="Enter number" name="cn">
            </div>

            <div class="form-group">
                <label for="address">Email Address <i>(Optional)</i> </label>
                <input type="email" class="form-control" placeholder="Enter Permanent Address" name="ea">
            </div>

            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" class="form-control" placeholder="Enter Username" name="usn">
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" placeholder="Enter Password" name="pwd">
            </div>

            <div class="form-group">
                <label for="confirm_password">Confirm Password</label>
                <input type="password" class="form-control" placeholder="Enter Confirm password" name="cfpwd">
            </div>

            <button class="btn btn-block btn-success" type="submit">Sign up</button>
            <p>By clicking Sign up, you have read and agree to our <a href="#">Terms, Data Policy, Cookies Policy.</a></p>
        </form>
    </div>
</div>