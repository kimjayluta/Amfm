{% include "Profile/header.twig" %}

<div class="container mt-4">
    <div class="clearfix">
        <div class="float-left" style="display: inline-block;height: 150px; width: 150px; background: url('/img/person_icon.png') no-repeat; background-size: cover"></div>
        <div class="float-left ml-3 mt-0">
            <h3 >{{ FULL_NAME }}</h3>
            <div class="mt-1">
                <strong>Username: </strong><span></span>
            </div>
            <div class="mt-1">
                <strong>Password: </strong><span>ENCRYPTED</span>
            </div>
            <div class="mt-1">
                <a href="#" data-target="#editbasicInfo" data-toggle="modal">Edit basic info</a>
            </div>
        </div>
    </div>
    <div class="card mt-2">
        <div class="card-body" >
            <table>
                <tr>
                    <td  style="width: 165px"><strong>Address: </strong></td>
                    <td><span> calauag naga city</span></td>
                </tr>
                <tr>
                    <td><strong>Email: </strong></td>
                    <td><span> calauag@nagacity.com</span></td>
                </tr>
                <tr>
                    <td><strong>Contact Number: </strong></td>
                    <td><span>0983713891</span></td>
                </tr>
                <tr>
                    <td><strong>Birthday: </strong></td>
